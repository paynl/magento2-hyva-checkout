<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Hyva\Checkout\Magewire\Checkout\Payment\MethodList">
        <plugin name="paynl_hyva_checkout_set_default_method" type="Paynl\HyvaCheckout\Plugin\SetDefaultPaymentMethod" />
    </type>
    <type name="Hyva\CompatModuleFallback\Model\CompatModuleRegistry">
        <arguments>
            <argument name="compatModules" xsi:type="array">
                <item name="hyva-paynl-magento2-plugin" xsi:type="array">
                    <item name="original_module" xsi:type="string">Paynl_Payment</item>
                    <item name="compat_module" xsi:type="string">Paynl_HyvaCheckout</item>
                </item>
            </argument>
        </arguments>
    </type>
</config>
